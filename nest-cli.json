{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/inctagram/src",
  "compilerOptions": {
    "assets": [
      "**/*.hbs",
      "**/*.html"
    ],
    "watchAssets": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true
        }
      },
      {
        "name": "@nestjs/graphql/plugin",
        "options": {
          "typeFileNameSuffix": [
            ".input.ts",
            ".model.ts",
            ".args.ts"
          ]
        }
      }
    ],
    "webpack": true,
    "tsConfigPath": "apps/inctagram/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/inctagram",
  "projects": {
    "inctagram": {
      "type": "application",
      "root": "apps/inctagram",
      "entryFile": "main",
      "sourceRoot": "apps/inctagram/src",
      "compilerOptions": {
        "tsConfigPath": "apps/inctagram/tsconfig.app.json"
      }
    },
    "business": {
      "type": "application",
      "root": "apps/business",
      "entryFile": "main",
      "sourceRoot": "apps/business/src",
      "compilerOptions": {
        "tsConfigPath": "apps/business/tsconfig.app.json"
      }
    },
    "images": {
      "type": "application",
      "root": "apps/images",
      "entryFile": "main",
      "sourceRoot": "apps/images/src",
      "compilerOptions": {
        "tsConfigPath": "apps/images/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}